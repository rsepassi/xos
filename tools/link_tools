#!/bin/sh

set -e

outdir=$1
tools=$2

dir=$(mktemp -d)

for tool in $tools
do
  srcpath=$(which $tool || echo "")
  if [ -z "$srcpath" ]
  then
    echo "tool $tool does not exist"
    exit 1
  fi
  ln -s $srcpath $dir
done

rm -rf $outdir
mkdir -p $(dirname $outdir)
mv $dir $outdir
touch $outdir/.ok
